<script>
    function login()
    {
        
var name=document.E.R.value;
var pass=document.E.T.value;
if(name=="Thiru" && pass=="21")
{
    return true;
}
else if(name!="Thiru" && pass=="21")
{
    alert("Enter valid name");
    return  false;
}
else 
{
    alert("Enter valid password");
    return false;
}
    }

